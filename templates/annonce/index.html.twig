{% extends 'base.html.twig' %}

{% block title %}Nos Annonces - Coup de Patte{% endblock %}

{% block body %}
{% include 'commun/nav.html.twig' %}

<main>
  <div class="container py-4">
    <header class="pb-3 mb-4 border-bottom text-center">
        <img class="d-block mx-auto mb-4" src="{{asset('images/png-clipart-paw-dog-printing-paws-animals-monochrome.png')}}" alt="" width="72" height="57">
        <span class="fs-1">{{animal.nomAnimal}}</span>
        <p class="fs-3" >{{animal.idRace.nomRace}}</p>
    </header>

    <div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid rounded-3">
        {% for image in URLImage %}
          {% if 'http' in image %}
						<img src="{{image}}" class="rounded-3 card-img-top" max-width="100%">
					{% else %}
						<img src="/uploads/{{image}}" class=" card-img-top" max-width="100%">
					{% endif %}
        {% endfor %}
        <p class="col-md-8 fs-4 mb-4 text-center mx-auto">{{animal.texteAnimal}}</p>
        <div class="row">
        <p class="col-md-4 text-center fs-4">{{animal.ageAnimal}} ans</p>
        <p class="col-md-4 text-center fs-4">{{animal.poidAnimal}} Kg</p>
        <p class="col-md-4 text-center fs-4">{{animal.prixAnimal}} €</p>
        </div>
        <div class="row">
        <p class="col-md-4 text-center fs-4"> LOF : {{animal.lofAnimal}}</p>
        <p class="col-md-4 text-center fs-4">Female : {{animal.isFeminin}}</p>
        <p class="col-md-4 text-center fs-4">Identifié : {{animal.isIdentifie}}</p>
        </div>
        </div>
        <div class="row">
        <p class="col-md-4 text-center fs-4">Taille : {{animal.idTaille.nomTaille}}</p>
        <p class="col-md-4 text-center fs-4">Couleur : {{animal.idCouleur.nomCouleur}}</p>
        <p class="col-md-4 text-center fs-4">Poils : {{animal.idTypepoils.nomTypepoils}}</p>
        </div>
        <a  href="{{ path('app_accueil')}} " type="button" class="btn btn-sm btn-outline-secondary">Retour vers l'acceuil</a>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Contacter le propriétaire de l'animal.</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
              
                <h1 class="modal-title fs-5" id="exampleModalLabel">Envoyer un message</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
              {% for message in app.flashes('success') %} 
                    {{ message|raw}}
                {% endfor %}
                {{form_start(form_message)}}
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Email du vendeur: </label>
                    {{vendeur.loginUtilisateur}}
                  </div>
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Votre Email: </label>
                    {{utilisateurCo.loginUtilisateur}}
                  </div>
                  <div class="mb-3">
                    <label for="message-text" class="col-form-label">Message: </label>
                    {{form_row(form_message.message)}}
                  </div>
                
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                {{form_row(form_message.save)}}
              </div>
            </div>
            {{form_end(form_message)}}
          </div>
        </div>
      </div>
    </div>
  </div>
</main>


{% include 'commun/footer.html.twig' %}
{% endblock %}

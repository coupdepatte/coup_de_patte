{% extends 'base.html.twig' %}

{% block title %}Nos Annonces{% endblock %}

{% block body %}
{% include 'commun/nav.html.twig' %}

<main>
  <div class="container py-4">
    <header class="pb-3 mb-4 border-bottom">
        <img class="d-block mx-auto mb-4" src="{{asset('images/png-clipart-paw-dog-printing-paws-animals-monochrome.png')}}" alt="" width="72" height="57">
        <span class="fs-4 text-center">{{animal.nomAnimal}}</span>
    </header>

    <div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">{{animal.ageAnimal}}</h1>
        <img src="{{URLImage}}" class=" card-img-top" >
        <p class="col-md-8 fs-4">{{animal.texteAnimal}}</p>
        <a  href="{{ path('app_accueil')}} " type="button" class="btn btn-sm btn-outline-secondary">Retour vers l'acceuil</a>
      </div>
    </div>
  </div>
</main>



{% extends 'base.html.twig' %}
{% block title %}Hello DashboardController!
{% endblock %}
{% block stylesheets %}
	<link href="{{asset('css/dashboard.css')}}" rel="stylesheet">
{% endblock %}
{% block body %}
	{% include 'commun/nav.html.twig' %}

	<div class="container-fluid">
		<div class="row">
			<main class="col-md  px-md-4">
				<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
					<h1 class="h2">Bienvenue
					</h1>
					<a class="nav-link " href="{{path('app_dashboard_ajouter')}}">
						<span data-feather="file" class="align-text-bottom"></span>
						Ajouter un article
					</a>
					<a class="nav-link active mx-2" aria-current="page" href="{{path('app_dashboard')}}">
						<span data-feather="home" class="align-text-bottom"></span>
						Mes annonces
					</a>
				</div>
			</main>
		</div>
	</div>

	<div class="row mx-1">
		{% for img in images %}

			<div class="col-lg-4">
				<div class="card shadow-sm">
					<div class="card-header text-center">
						{{ img.idAnimal.nomAnimal }}<br>
					</div>
					{% if 'http' in img.image %}
						<img src="{{img.image}}" class=" card-img-top" max-width="100%" height="225">
					{% else %}
						<img src="uploads/{{img.image}}" class=" card-img-top" max-width="100%" height="225">
					{% endif %}
					<div class="card-body">
						<p class="card-text">
							{{img.idAnimal.texteAnimal | slice(0, 50) |raw}}...</p>
						<div class="d-flex justify-content-between align-items-center">
							<div class="btn-group">
								<a type="button" class="btn btn-sm btn-outline-secondary">View</a>
							</div>
						</div>
					</div>
					<div class="card-footer text-muted"></div>
				</div>
			</div>
		{% endfor %}

	</div>
	{% include 'commun/footer.html.twig' %}

{% endblock %}
{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js" integrity="sha384-uO3SXW5IuS1ZpFPKugNNWqTZRRglnUJK6UAZ/gxOX80nxEkN9NcGZTftn6RzhGWE" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" integrity="sha384-zNy6FEbO50N+Cg5wap8IKA4M/ZnLJgzc6w2NqACZaK0u0FXfOWRRJOnQtpZun8ha" crossorigin="anonymous"></script>
	<script src="{{asset('js/dashboard.js')}}"></script>
{% endblock %}
